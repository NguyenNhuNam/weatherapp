<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="ring" android:thicknessRatio="24" android:useLevel="false">
            <solid android:color="#DCDCDC"/>
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="270" android:toDegrees="270">
            <shape android:shape="ring" android:thicknessRatio="24" android:useLevel="true">
                <gradient android:angle="0" android:endColor="@color/white" android:startColor="@color/white" android:type="sweep"/>
            </shape>
        </rotate>
    </item>
</layer-list>